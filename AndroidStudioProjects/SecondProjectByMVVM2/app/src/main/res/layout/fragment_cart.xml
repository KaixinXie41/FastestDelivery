<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.checkout.CartFragment">
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_restaurant_name"
        tools:text="Restaurant Name"
        style="@style/TextMealNameLarge"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0dp"
        android:id="@+id/rv_cart_item"
        tools:itemCount="3"
        tools:listitem="@layout/item_view_cart"
        app:layout_constraintTop_toBottomOf="@id/txt_restaurant_name"
        app:layout_constraintStart_toStartOf="parent"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/group_delivery_type"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/rv_cart_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_pickUp"
            android:text="@string/pickup"
            style="@style/TextMealDesc"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_delivery"
            android:text="@string/delivery"
            style="@style/TextMealDesc" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rv_dineIn"
            android:text="@string/dineIn"
            style="@style/TextMealDesc"/>
    </RadioGroup>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_total_price"
        android:text="@string/total"
        style="@style/TextMealName"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/group_delivery_type"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_total_price_value"
        android:text="@string/Amount"
        style="@style/TextMealName"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/group_delivery_type"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0dp"
        android:id="@+id/frameLayout_option"
        app:layout_constraintTop_toBottomOf="@id/txt_total_price"
        app:layout_constraintBottom_toTopOf="@id/btnPlaceOrder"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnPlaceOrder"
        android:text="@string/placeOrder"
        style="@style/TextMealName"
        android:textColor="@color/white"
        android:background="@color/orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>